<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Welcome"
            android:id="@+id/welcome"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textColor="#800000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please fill the information"
            android:id="@+id/fill"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
        <ImageView

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/defaultimage"
            android:src="@drawable/defaultimage"
            android:layout_below="@+id/fill"
            android:layout_alignRight="@+id/fill"
            android:layout_alignEnd="@+id/fill" />

    <EditText
        android:hint="      UserName"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/userid"
        android:layout_below="@+id/defaultimage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="      Password"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/pass"
        android:layout_below="@+id/userid"
        android:layout_alignRight="@+id/userid"
        android:layout_alignEnd="@+id/userid"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignStart="@+id/userid" />

    <EditText
        android:hint="      Confirm Password"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/confirmpass"
        android:layout_below="@+id/pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />

    <EditText
        android:hint="      Email id"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailid"
        android:layout_below="@+id/confirmpass"
        android:layout_alignLeft="@+id/confirmpass"
        android:layout_alignStart="@+id/confirmpass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <EditText
        android:hint="      Phone No."
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneno"
        android:layout_below="@+id/emailid"
        android:layout_alignLeft="@+id/emailid"
        android:layout_alignStart="@+id/emailid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Us"
        android:id="@+id/joinus"
        android:layout_below="@+id/phoneno"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_custom"
        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose Photo"
        android:id="@+id/choosephoto"
        android:layout_alignRight="@+id/defaultimage"
        android:layout_alignEnd="@+id/defaultimage"
        android:layout_above="@+id/userid"
        android:layout_alignLeft="@+id/defaultimage"
        android:layout_alignStart="@+id/defaultimage" />


</RelativeLayout>
    </ScrollView>




</RelativeLayout>